export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="robbyrussell"

plugins=(autojump virtualenv zsh-autosuggestions last-working-dir asdf zsh-syntax-highlighting direnv git)

source $ZSH/oh-my-zsh.sh

# things for extra support
export DOTFILES="$HOME/.dotfiles"
[ ! -e "$DOTFILES/zsh/extra.sh" ] || \. "$DOTFILES/zsh/extra.sh"

export GPG_TTY=$(tty)

source ~/.zprofile
source ~/.zsh_profile

. /opt/homebrew/opt/asdf/libexec/asdf.sh

# pnpm
export PNPM_HOME="/Users/vybhavab/Library/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end
